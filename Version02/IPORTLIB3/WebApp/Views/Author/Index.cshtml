@using WebApp.Resources
@model WebApp.Models.Model<DTO.Author>
@{
    ViewBag.Title = "Author";
}
<h2>@Language.ManageAuthor</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.AuthorName</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model.Objs)
{
    <tr>
		<td>@item.AuthorName</td>

        <td><a href="/Author/Edit/@item.AuthorId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Author/Delete/@item.AuthorId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
<div class="paging">
    @for (int i = 1; i <= Model.Page; i++)
    {
        <span><a href="/Author/Index/@i">@i</a></span>
    }
</div>
