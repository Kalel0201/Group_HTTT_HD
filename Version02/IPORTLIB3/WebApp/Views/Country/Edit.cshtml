@using WebApp.Resources
@model DTO.Country
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/Country/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CountryId)
    <p>
        <label>@Language.CountryName</label>
        @Html.TextBoxFor(model => model.CountryName, new { @class = "txtlarge" })    
        @Html.ValidationMessageFor(model => model.CountryName)
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
