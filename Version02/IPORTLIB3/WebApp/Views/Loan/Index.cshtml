@using WebApp.Resources
@model IEnumerable<DTO.Loan>
@{
    ViewBag.Title = "Loan";
}
<h2>@Language.ManageLoan</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>

        <td><a href="/Loan/Edit/@item.LoanId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Loan/Delete/@item.LoanId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
