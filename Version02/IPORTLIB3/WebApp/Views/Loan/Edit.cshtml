@using WebApp.Resources
@model DTO.Loan
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/Loan/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.LoanId)
    <p>
        <label>@Language.User</label>
        @Html.DropDownList("UserId", String.Empty)
		<span class="required">*</span>
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
