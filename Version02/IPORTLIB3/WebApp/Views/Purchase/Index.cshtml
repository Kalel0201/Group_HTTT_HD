@using WebApp.Resources
@model IEnumerable<DTO.Purchase>
@{
    ViewBag.Title = "Purchase";
}
<h2>@Language.ManagePurchase</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>

        <td><a href="/Purchase/Edit/@item.PurchaseId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Purchase/Delete/@item.PurchaseId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
