@using WebApp.Resources
@model DTO.PurchaseDetail
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/PurchaseDetail/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.PurchaseDetailId)
    <p>
        <label>@Language.Purchase</label>
        @Html.DropDownList("PurchaseId", String.Empty)
		<span class="required">*</span>
    </p>
    <p>
        <label>@Language.Status</label>
        @Html.DropDownList("StatusId", String.Empty)
		<span class="required">*</span>
    </p>
    <p>
        <label>@Language.Title</label>
        @Html.TextBoxFor(model => model.Title, new { @class = "txtlarge" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.Title)
    </p>
    <p>
        <label>@Language.AuthorName</label>
        @Html.TextBoxFor(model => model.AuthorName, new { @class = "txtlarge" })    
        @Html.ValidationMessageFor(model => model.AuthorName)
    </p>
    <p>
        <label>@Language.Quantity</label>
        @Html.TextBoxFor(model => model.Quantity, new { @class = "txtdate" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.Quantity)
    </p>
    <p>
        <label>@Language.Note</label>
        @Html.TextBoxFor(model => model.Note, new { @class = "txtlarge" })    
        @Html.ValidationMessageFor(model => model.Note)
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
