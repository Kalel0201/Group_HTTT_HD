@using WebApp.Resources
@model IEnumerable<DTO.PurchaseDetail>
@{
    ViewBag.Title = "PurchaseDetail";
}
<h2>@Language.ManagePurchaseDetail</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.Title</th><th>@Language.Quantity</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>
		<td>@item.Title</td>
		<td>@item.Quantity</td>

        <td><a href="/PurchaseDetail/Edit/@item.PurchaseDetailId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/PurchaseDetail/Delete/@item.PurchaseDetailId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
