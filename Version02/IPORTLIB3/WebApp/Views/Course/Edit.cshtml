@using WebApp.Resources
@model DTO.Course
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/Course/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.CourseId)
    <p>
        <label>@Language.Quantity</label>
        @Html.TextBoxFor(model => model.Quantity, new { @class = "txtdate" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.Quantity)
    </p>
    <p>
        <label>@Language.StartDate</label>
        @Html.TextBoxFor(model => model.StartDate, new { @class = "txtdate" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.StartDate)
    </p>
    <p>
        <label>@Language.EndDate</label>
        @Html.TextBoxFor(model => model.EndDate, new { @class = "txtdate" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.EndDate)
    </p>
    <p>
        <label>@Language.Note</label>
        @Html.TextBoxFor(model => model.Note, new { @class = "txtlarge" })    
        @Html.ValidationMessageFor(model => model.Note)
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
