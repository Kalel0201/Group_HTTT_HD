@{
    ViewBag.Title = "Thêm mới độc giả";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div id="page-wrapper">
	<!-- /.row -->
	<div class="row">
		<div class="col-lg-12">
			<form role="form" method="post" action="/Reader/Create">
				<div class="panel panel-default">
					<div class="panel-heading">
						Nhập thông tin - thẻ độc giả
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-6">
								<h3>Thông tin độc giả</h3>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Họ&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Điền họ độc giả" name="FirstName">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Tên&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Điền tên độc giả" name="LastName">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Mã số&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Điền mã số SV/NV" name="UserNo" id="UserNo">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										CMND&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Điền chứng minh nhân dân" name="IdentityCard">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Giới tính&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									<select class="form-control" name="Gender">
										<option value="true">Nam</option>
										<option value="fasle">Nữ</option>
									</select>
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Ngày sinh&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Ngày sinh" name="BirthDay">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Email&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Điền email" name="Email">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Số điện thoại&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Điền số điện thoại" name="Phone">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Khoa/Đơn vị&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									@Html.DropDownList("DepartmentId", null, new { @class = "form-control" })
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Nhóm&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									@Html.DropDownList("GroupId", null, new { @class = "form-control" })
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">Tỉnh/Thành phố</span>
									@Html.DropDownList("ProvinceId", null, new { @class = "form-control" })
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Địa chỉ&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
										&nbsp;&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Địa chỉ" name="Address">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Hình độc giả&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									<input type="hidden" name="AttachmentId" id="AttachmentId" />
									<img src="/Images/no_image.jpg" alt="Avatar" 
										 class="img-circle" width="100" height="100"
										 style="margin-left: 20px;" id="resultImage">
									<a class="fa fa-link" id="btnUpload"
									   style="margin-left: 35px; cursor: pointer;"
									   data-toggle="modal" data-target="#uploadModal">
										Upload
									</a>
									<input type="hidden" id="OldAttachmentId" />
									<input type="hidden" id="OldSrcImage" />
								</div>
							</div>
							<!-- /.col-lg-6 (nested) -->
							<div class="col-lg-6">
								<h3>Thông tin thẻ độc giả</h3>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Mã số thẻ
										&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Mã số thẻ">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Mã số vạch
										&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Mã số vạch">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Mã số vạch&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									<img src="" alt="Mã vạch"
										 class="img-circle" width="100" height="100"
										 style="margin-left: 20px;" id="barCodeResult">
									<a style="margin-left: 35px; cursor: pointer;" id="btnGenerateBarcode">
										Phát sinh
									</a>
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">Tên đăng nhập</span>
									<input class="form-control" placeholder="Tên đăng nhập">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Mật khẩu
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Mật khẩu">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Ngày hết hạn<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Ngày hết hạn">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">Trạng thái thẻ&nbsp;&nbsp;</span>
									<select class="form-control">
										<option value="1">Được mượn</option>
										<option value="0">Không được mượn</option>
									</select>
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Tiền ký quỹ&nbsp;&nbsp;
										<span class="required">*</span>
									</span>
									<input class="form-control" placeholder="Tiền ký quỹ">
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										In thẻ
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									<select class="form-control">
										<option value="1">Đã in</option>
										<option value="0">Chưa in</option>
									</select>
								</div>
								<div class="form-group input-group">
									<span class="input-group-addon">
										Ghi chú
										&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
									</span>
									<textarea class="form-control" rows="13" style="resize: none;"></textarea>
								</div>
							</div>
							<!-- /.col-lg-6 (nested) -->
						</div>
						<!-- /.row (nested) -->
					</div>
					<!-- /.panel-body -->
				</div>
				<div class="row" style="text-align: center; margin-bottom: 10px;">
					<button type="submit" class="btn btn-primary">Lưu</button>
					<button type="reset" class="btn btn-default">Nhập lại</button>
				</div>
				<!-- /.panel -->
			</form>
		</div>
		<!-- /.col-lg-12 -->
	</div>
	<!-- /.row -->
</div>
<!-- /#page-wrapper -->


<!-- Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close cancelImage" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="myModalLabel">Upload hình ảnh</h4>
			</div>
			<div class="modal-body">
				<div class="form-group input-group">
					<span class="input-group-addon">Upload từ thiết bị</span>
					<input type="file" id="chooseDevice">
				</div>
				<div class="form-group input-group">
					<span class="input-group-addon">Upload từ URL</span>
					<div class="col-md-10">
						<input class="form-control" placeholder="Nhập URL" id="txtUrl">
					</div>
					<div>
						<button class="btn btn-outline btn-primary" type="button" id="chooseUrl">Lấy hình</button>
					</div>
				</div>
				<div class="form-group">
					<input type="hidden" id="tmpAttachmentId" />
					<img src="" alt="" id="ChoosedImage"
						 class="img-circle" width="100" height="100">
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default cancelImage" data-dismiss="modal">Đóng</button>
				<button type="button" class="btn btn-primary" id="readyImage" data-dismiss="modal">Đồng ý</button>
			</div>
		</div>
	</div>
</div>