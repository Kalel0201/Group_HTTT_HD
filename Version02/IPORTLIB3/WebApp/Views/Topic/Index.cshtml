@using WebApp.Resources
@model IEnumerable<DTO.Topic>
@{
    ViewBag.Title = "Topic";
}
<h2>@Language.ManageTopic</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.TopicName</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>
		<td>@item.TopicName</td>

        <td><a href="/Topic/Edit/@item.TopicId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Topic/Delete/@item.TopicId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
