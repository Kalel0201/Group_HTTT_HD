@using WebApp.Resources
@model DTO.Period
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/Period/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.PeriodId)
    <p>
        <label>@Language.Publication</label>
        @Html.DropDownList("PublicationId", String.Empty)
		<span class="required">*</span>
    </p>
    <p>
        <label>@Language.PeriodName</label>
        @Html.TextBoxFor(model => model.PeriodName, new { @class = "txtavg" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.PeriodName)
    </p>
    <p>
        <label>@Language.Chapter</label>
        @Html.TextBoxFor(model => model.Chapter, new { @class = "txtavg" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.Chapter)
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
