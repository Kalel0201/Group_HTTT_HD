@using WebApp.Resources
@model DTO.Book
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/Book/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.BookId)
    <p>
        <label>@Language.Publication</label>
        @Html.DropDownList("PublicationId", String.Empty)
		<span class="required">*</span>
    </p>
    <p>
        <label>@Language.Store</label>
        @Html.DropDownList("StoreId", String.Empty)
		<span class="required">*</span>
    </p>
    <p>
        <label>@Language.NumberSpecific</label>
        @Html.TextBoxFor(model => model.NumberSpecific, new { @class = "txtavg" })
		<span class="required">*</span>   
        @Html.ValidationMessageFor(model => model.NumberSpecific)
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
