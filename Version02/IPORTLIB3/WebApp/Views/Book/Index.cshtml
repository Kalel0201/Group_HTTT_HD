@using WebApp.Resources
@model IEnumerable<DTO.Book>
@{
    ViewBag.Title = "Book";
}
<h2>@Language.ManageBook</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.NumberSpecific</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>
		<td>@item.NumberSpecific</td>

        <td><a href="/Book/Edit/@item.BookId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Book/Delete/@item.BookId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
