@using WebApp.Resources
@model IEnumerable<DTO.Store>
@{
    ViewBag.Title = "Store";
}
<h2>@Language.ManageStore</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.StoreName</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>
		<td>@item.StoreName</td>

        <td><a href="/Store/Edit/@item.StoreId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Store/Delete/@item.StoreId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
