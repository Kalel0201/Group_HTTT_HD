@using WebApp.Resources
@model IEnumerable<DTO.OrderDetail>
@{
    ViewBag.Title = "OrderDetail";
}
<h2>@Language.ManageOrderDetail</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.Quantity</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>
		<td>@item.Quantity</td>

        <td><a href="/OrderDetail/Edit/@item.OrderDetailId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/OrderDetail/Delete/@item.OrderDetailId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
