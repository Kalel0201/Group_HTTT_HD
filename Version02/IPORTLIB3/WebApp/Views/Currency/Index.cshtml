@using WebApp.Resources
@model IEnumerable<DTO.Currency>
@{
    ViewBag.Title = "Currency";
}
<h2>@Language.ManageCurrency</h2>
<p>
    @Html.ActionLink(Language.CreateNew, "Create")
</p>
<table class="table">
    <tr><th>@Language.CurrencyName</th><th class="colsmall">@Language.Edit</th><th class="colsmall">@Language.Delete</th></tr>
@foreach (var item in Model)
{
    <tr>
		<td>@item.CurrencyName</td>

        <td><a href="/Currency/Edit/@item.CurrencyId"><img src="/Images/Edit.gif" alt="Edit" /></a></td>
        <td><a href="/Currency/Delete/@item.CurrencyId"><img src="/Images/Delete.gif" alt="Delete" /></a></td>
    </tr>
}
</table>
