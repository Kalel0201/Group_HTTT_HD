@using WebApp.Resources
@model DTO.Order
@{
    ViewBag.Title = Language.Edit;
}
<h2>@Language.Edit</h2>
<form method="post" action="/Order/Edit" class="frm">
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.OrderId)
    <p>
        <label>@Language.Supplier</label>
        @Html.DropDownList("SupplierId", String.Empty)
		<span class="required">*</span>
    </p>
    <p>
        <label>@Language.Status</label>
        @Html.DropDownList("StatusId", String.Empty)
		<span class="required">*</span>
    </p>

    <p>
        <label>&nbsp;</label>
        <input type="submit" value="@Language.Save" class="btn" />
    </p>
</form>
<div>
    @Html.ActionLink(Language.BackToList, "Index")
</div>
